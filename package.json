{
  "name": "bos-app",
  "version": "1.0.0",
  "description": "BOS Components for PotLock",
  "repository": "git@github.com:PotLock/bos-app.git",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "init": "git submodule init && pnpm install && pnpm run build:bw",
    "dev": "pnpm run bw workspace dev",
    "dev:gateway": "npx nx run-many --target=dev --projects=viewer",
    "bw": "./node_modules/bos-workspace/bin/bw.js",
    "build:bw": "pnpm --filter ./packages/bos-workspace run build"
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.26",
    "bos-workspace": "workspace:*",
    "lint-staged": "^13.2.1",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "prettier --write --ignore-unknown"
  },
  "watch": {
    "deploy": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
